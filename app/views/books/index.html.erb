<h2><strong>Books<strong></h2>
<% @books.each do |book| %>
<p>Title</p>
<%= book.title%>
<!--%= book.id% 数字が出る-->
<p>Body</p>
<%= book.body%>


<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete %>

<% end %>
<!--linktoが３つ入りそう-->

<h2><strong>New book</strong></h2>
<%= form_with model:@book, model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br>
<%= f.submit 'Create books' %>

<% end %>
